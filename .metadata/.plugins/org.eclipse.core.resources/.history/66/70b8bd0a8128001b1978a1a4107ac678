//-------------------------------------------------------
/* 3. 분할 대입 (destructuring assignment) : (es6)
 			- 배열과 객체의 요소를 분할하는 부분
 		(1) 배열 분할
 */
 var data = [10, 20, 30, 40, 50];
 var a0 = data[0];
 var a1 = data[1];
 var a2 = data[2];
 document.writeln(a0+ a1+ a2 + "<br/>");  
 console.log(a0, a1, a2 )
 
let [a,b,c,d,e]=data;
document.writeln(a+b+c+"<br/>");
console.log(a,b,c);

let [v1,v2,...v3]=data;
document.writeln(v1+v2+v3+"<br/>");
console.log(v1,v2,v3);

let d1=100, d2=200;
[d2,d1]=[d1,d2] //매개체 없이 바로 값을 서로 바꿀수 있음

console.log("d1:"+d1);
console.log("d2:"+d2);

 /*  (2) 객체 분할
  */
 
let book ={title:"자바스크립트", publish:"코스모",price:30000};

let (title,publish)=book;
document.write(title+"<br/>");
document.write(publish+"<br/>");
 
