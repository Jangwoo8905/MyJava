// 2. 형변환
var n ='0770';
document.writeln(typeof n+"<br/>");
document.writeln(Number(n)+"<br/>");
document.writeln(parseInt(n)+"<br/>");
document.writeln(parseFloat(n)+"<br/>"); //js는 Float를 기본형으로 한다
document.writeln(typeof parseInt(n)+"<br/>");
document.writeln("<hr/>");

var n ='abc0770';
document.writeln(typeof n+"<br/>");
document.writeln(Number(n)+"<br/>");
document.writeln(parseInt(n)+"<br/>");
document.writeln("<hr/>");

var n ='0770abc';
document.writeln(typeof n+"<br/>");
document.writeln(Number(n)+"<br/>"); //NaN Not A Number (NaN)
document.writeln(parseInt(n)+"<br/>");

document.writeln("<hr/>");

var n=123;

document.writeln(n+"4");
document.writeln(123-"4");

